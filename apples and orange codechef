#include <stdio.h>

int main(void) {
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--)
	{
	    int N,M;
	    scanf("%d%d",&N,&M);
	    if(N>M)
	    {
	        int c=0;
	        while(M<=N)
	        {
	            c++;
	            M++;
	        }
	    }
	    else{
	       int c=0;
	        while(N<=M)
	        {
	            c++;
	            N++;
	        }
	    }
	}
	printf("%d\n",c);
	return 0;
}

